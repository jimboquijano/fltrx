{
  "name": "fltrx",
  "version": "1.0.0",
  "description": "Attribute-driven JavaScript library to enhance your HTML forms.",
  "author": "Jimbo Quijano",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "filter",
    "highlight",
    "sort",
    "group",
    "pagination",
    "async",
    "javascript",
    "library",
    "frontend",
    "attributes"
  ],
  "main": "dist/fltrx.umd.js",
  "module": "dist/fltrx.es.js",
  "exports": {
    ".": {
      "import": "./dist/fltrx.es.js",
      "require": "./dist/fltrx.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^15.3.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "terser": "^5.31.1",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "vitepress": "^1.6.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jimboquijano/fltrx.git"
  },
  "bugs": {
    "url": "https://github.com/jimboquijano/fltrx/issues"
  },
  "homepage": "https://github.com/jimboquijano/fltrx#readme"
}
